forecolor=#DAC2E2
backcolor=#140433
secondarycolor=#0f0

::-webkit-scrollbar
  width: 3px
 
::-webkit-scrollbar-track
  background-color: transparent
 
::-webkit-scrollbar-thumb
  border-radius: 1.5px
  background-color: darken(forecolor, 0%)

::-webkit-scrollbar-thumb:window-inactive
	background-color: darken(forecolor, 75%)

div.drag-fix-top, div.drag-fix-bottom
  -webkit-app-region: no-drag
  height:0px
  width:100%
  position:absolute
  left:0
  z-index:0
  background:red

div.drag-fix-top
  top: 0

div.drag-fix-bottom
  bottom: 0

body
  background-color: transparent
  color: forecolor
  font-family: Monaco
  height: 100%
  width: 100%
  position: absolute
  overflow: hidden
  -webkit-user-select: none

div.title-bar
  position: relative
  -webkit-app-region: drag
  border-radius: 15px 15px 0px 0px
  cursor: move
  text-transform: uppercase
  font-weight: bold
  height: 25px
  width: 200px
  line-height: 30px
  margin: auto
  font-size: 13px
  background-color: backcolor
  text-align: center
  div#app-controls
    position: absolute
    right: 10px
    top: 3px
    line-height: 25px 
    span.glyphicon-minus
      margin-right: 10px
    span
      cursor: pointer

div.content
  background-color: backcolor
  background-image: url("../imgs/background.png")
  background-attachment: fixed
  background-size: cover
  background-position: center
  height: calc(100% - 25px)
  width: 275px
  top: 25px
  position: absolute
  border: solid 5px backcolor
  border-radius: 15px 15px 15px 15px
  backface-visibility: hidden
  transition-property: -webkit-transform
  transition-duration: .5s
  transform-origin: center center
  &.ng-leave
    transform: rotateY(0deg)
    z-index: 20
  &.ng-leave-active
    transform: rotateY(180deg)
    z-index: 10
  &.ng-enter
    transform: rotateY(-180deg)
    z-index: 10
  &.ng-enter-active
    transform: rotateX(0deg)
    z-index: 20

div.deck-cover
  box-shadow: 2px 2px backcolor
  display: inline-block
  position: relative
  background-color: backcolor
  border-radius: 10px
  border: solid 1px darken(forecolor, 25%)
  width: 215px
  height: 64px
  color: forecolor
  div.controls
    display: none
    background-color: backcolor
    border-radius: 0 10px 0 10px
    padding: 5px 5px 2px 5px
    position: absolute
    right: 0
    top: 0
    font-size: 17px
    span
      &.glyphicon-remove
        margin-right: 10px
      &.delete-deck
        color: darken(#f00, 25%)
        &:hover
          color: #f00
      &.edit-deck
        color: darken(#ff0, 25%)
        &:hover
          color: #ff0
  span.name
    position: absolute
    bottom: 3px
    left: 10px
    font-size: 20px
    line-height: 25px
  img.cover
    border-radius: 10px
    width: 100%
    height: 100%
  &.interactive
    cursor: pointer
    color: darken(secondarycolor, 25%)
    border: solid 1px darken(secondarycolor, 50%)
    &:hover
      color: secondarycolor
      border: solid 1px darken(secondarycolor, 25%)
      img
        opacity: 1
      div.controls
        display: inline-block
    img
      opacity: .65

div.card-thumbnail
  position: relative
  display: inline-block
  box-shadow: 2px 2px backcolor
  background-color: backcolor
  border-radius: 5px
  border: solid 1px darken(secondarycolor, 50%)
  width: 215px
  color: darken(secondarycolor, 15%)
  height: 40px
  text-align: left
  overflow: hidden
  span.name
    position: absolute
    line-height: 40px
    font-size: 14px
    left: 10px
    text-shadow: 2px 2px backcolor
  img.card
    opacity: .5
    border-radius: 5px 
    height: 100%

.glyphbutton.glyphicon
  color: darken(secondarycolor, 50%)
  &:hover
    color: secondarycolor

div#decks
  padding: 15px
  overflow: auto
  height: 100%
  ul#decks-list
    list-style: none
    text-align: center
    padding: 0
    margin: 0
    height: calc(100% - 50px)
    overflow: auto
    li
      margin-bottom: 15px
  span.new-deck
    margin: 10px auto 0 auto
    width: 35px
    display: block
    text-shadow: 1px 1px backcolor
    font-size: 35px
    cursor: pointer

div#deck-builder
  padding: 10px
  text-align: center
  height: 100%
  span.card-count
    position: absolute
    bottom: 3px
    right: 20px
  input#cardField
    outline: 0
    width: 180px
    padding: 5px
    background-color: #140433
    border: solid 1px darken(forecolor, 25%)
    border-radius: 5px
    margin: 20px 0 10px 0
    font-size: smaller
  button#addCard
    color: backcolor
    padding: 5px
    text-align: center
    line-height: 100%
    margin-left: 5px
  ul#cards
    list-style: none
    text-align: center
    padding: 0
    height: calc(100% - 70px)
    overflow: auto
    li
      margin: 0
      padding: 0
      height: 41px

div#confirm
  padding: 15px
  text-align: center
  h3
    margin-bottom: 25px
  button.btn.btn-success
    margin-right: 25px
