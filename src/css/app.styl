forecolor=#DAC2E2
backcolor=#140433
secondarycolor=#0f0

::-webkit-scrollbar
  width: 3px
 
::-webkit-scrollbar-track
  background-color: transparent
 
::-webkit-scrollbar-thumb
  border-radius: 1.5px
  background-color: darken(forecolor, 0%)

::-webkit-scrollbar-thumb:window-inactive
	background-color: darken(forecolor, 75%)

div.drag-fix-top, div.drag-fix-bottom
  -webkit-app-region: no-drag
  height:0px
  width:100%
  position:absolute
  left:0
  z-index:0
  background:red

div.drag-fix-top
  top: 0

div.drag-fix-bottom
  bottom: 0

body
  background-color: transparent
  color: forecolor
  font-family: Monaco
  height: 100%
  width: 100%
  position: absolute
  overflow: hidden
  -webkit-user-select: none

#spinner
  position: absolute
  width: 100%
  height: 100%
  text-align: center
  #overlay
    position: absolute
    width: 100%
    height: 100%
    opacity: .75
    background-color: backcolor
  img
    position: relative
    z-index: 10
    margin-top: 45%
    opacity: 1

div.title-bar
  position: relative
  -webkit-app-region: drag
  border-radius: 15px 15px 0px 0px
  cursor: move
  font-weight: bold
  height: 25px
  width: 200px
  line-height: 30px
  margin: auto
  font-size: 13px
  background-color: backcolor
  text-align: center
  div#app-controls
    position: absolute
    right: 10px
    top: 3px
    line-height: 25px 
    span.glyphicon-minus
      margin-right: 10px
    span
      cursor: pointer

div.content
  background-color: backcolor
  background-image: url("../imgs/background.png")
  background-attachment: fixed
  background-size: cover
  background-position: center
  height: calc(100% - 25px)
  width: 275px
  top: 25px
  position: absolute
  border: solid 5px backcolor
  border-radius: 15px 15px 15px 15px
  backface-visibility: hidden
  transition-property: -webkit-transform
  transition-duration: .5s
  transform-origin: center center
  &.ng-leave
    transform: rotateY(0deg)
    z-index: 20
  &.ng-leave-active
    transform: rotateY(180deg)
    z-index: 10
  &.ng-enter
    transform: rotateY(-180deg)
    z-index: 10
  &.ng-enter-active
    transform: rotateX(0deg)
    z-index: 20

div.deck-cover
  box-shadow: 2px 2px backcolor
  display: inline-block
  position: relative
  background-color: backcolor
  border-radius: 10px
  border: solid 1px darken(forecolor, 25%)
  width: 215px
  height: 64px
  color: forecolor
  div.controls
    display: none
    background-color: backcolor
    border-radius: 0 10px 0 10px
    padding: 5px 5px 2px 5px
    position: absolute
    right: 0
    top: 0
    font-size: 17px
    span
      &.glyphicon-remove
        margin-right: 10px
      &.delete-deck
        color: darken(#f00, 25%)
        &:hover
          color: #f00
      &.edit-deck
        color: darken(#ff0, 25%)
        &:hover
          color: #ff0
  span.name
    text-align: left
    position: absolute
    bottom: 2px
    left: 10px
    font-size: 13px
    line-height: 25px
    width: 125px
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  img.cover
    border-radius: 10px
    width: 100%
    height: 100%
  &.interactive
    cursor: pointer
    color: darken(secondarycolor, 25%)
    border: solid 1px darken(secondarycolor, 50%)
    &:hover
      color: secondarycolor
      border: solid 1px darken(secondarycolor, 25%)
      img
        opacity: 1
      div.controls
        display: inline-block
    img
      opacity: .65

div.card-thumbnail
  position: relative
  display: inline-block
  box-shadow: 2px 2px backcolor
  background-color: backcolor
  border-radius: 5px
  border: solid 1px darken(secondarycolor, 50%)
  width: 215px
  color: darken(secondarycolor, 15%)
  height: 30px
  text-align: left
  font-size: smaller
  span.name
    position: absolute
    line-height: 30px
    left: 20px
    text-shadow: 2px 2px backcolor
  img.card
    opacity: .5
    border-radius: 5px 
    height: 100%
  span.mana
    position: absolute
    left: -7px
    top: 5px
    height: 20px
    width: 20px
    border-radius: 50%
    background-color: #3772e6
    color: #fff
    text-align: center
    line-height: 22.5px
  span.count
    position: absolute
    right: 0
    top: 0
    height: 28px
    padding: 5px
    border-radius: 0 5px 5px 0
    background-color: backcolor
    color: #ff0
    text-align: center
    line-height: 20px

.glyphbutton.glyphicon
  color: darken(secondarycolor, 50%)
  &:hover
    color: secondarycolor

div#decks
  padding: 15px
  overflow: auto
  height: 100%
  ul#decks-list
    list-style: none
    text-align: center
    padding: 0
    margin: 0
    height: calc(100% - 50px)
    overflow: auto
    li
      margin-bottom: 15px
  span.new-deck
    margin: 10px auto 0 auto
    width: 35px
    display: block
    text-shadow: 1px 1px backcolor
    font-size: 35px
    cursor: pointer
    &:hover
      color: #fff

div#new-deck
  height: 100%
  padding: 15px
  input#deck-name
    padding: 5px
    font-size: smaller
    background-color: backcolor
    color: forecolor
    border: solid 1px forecolor
    border-radius: 5px
    display: block
    margin: 0 auto 15px auto
  ul#class-list
    height: calc(100% - 85px)
    overflow: auto
    list-style: none
    text-align: center
    padding: 0
    margin: 0 0 10px 0
    li
      margin-bottom: 5px
      cursor: pointer
      opacity: .65
      &:hover
        opacity: 1
  button#cancel
    display: block
    margin: auto

div#deck-tracker
  padding: 10px
  text-align: center
  height: 100%
  position: relative
  select
    margin-bottom: 5px
  div.zones
    height: calc(100% - 120px)
    position: relative
    margin-bottom: 15px
    div
      height: 100%
      ul
        list-style: none
        text-align: center
        padding: 10px
        height: 100% 
        margin-bottom: 15px
        overflow: auto
        background-color: #000
        border: solid 1px darken(forecolor, 25%)
        li
          margin: 0
          padding: 0
          height: 32px
          position: relative
        &.friendly-list
          border: solid 1px darken(secondarycolor, 25%)
        &.opposing-list
          border: solid 1px darken(#f00, 25%)
  div.versus
    margin-bottom: 10px
    span.vs
      font-size: 20px
      margin: 0 5px 0 5px
    button.btn
      outline: none
      font-size: 8px
      width: 100px
      &.selected
        border: solid 2px #fff
        font-weight: bold

div#deck-builder
  padding: 10px
  text-align: center
  height: 100%
  position: relative
  button.btn-success
    margin-right: 10px
  span.card-count
    position: absolute
    bottom: 3px
    right: 20px
  input#deckName
    outline: none
    position: absolute
    left: 16px
    bottom: 1px
    border: none
    width: 135px
    padding: 5px
    background-color: #000
    color: forecolor
    border-radius: 0 10px 0 10px
  div#deckCover
   position: relative 
   span.card-count
     font-size: smaller
     position: absolute
     bottom: 2px
     right: 16px
     background-color: #000
     padding: 5px
     border-radius: 10px 0 10px 0 
  div#add
    margin: 10px 0 10px 0
    position: relative
    input
      outline: 0
      width: 180px
      padding: 5px
      background-color: #140433
      border: solid 1px darken(forecolor, 25%)
      border-radius: 5px
      font-size: smaller
    button#addCard
      color: backcolor
      padding: 5px
      text-align: center
      line-height: 100%
      margin-left: 5px
      margin-top: 5px
      &[disabled]
        background-color: darken(secondarycolor, 50%)
        border-color darken(secondarycolor, 50%)
  ul#cards
    list-style: none
    text-align: center
    padding: 10px
    height: calc(100% - 165px)
    overflow: auto
    background-color: #000
    border: solid 1px darken(forecolor, 25%)
    li
      margin: 0
      padding: 0
      height: 32px
      position: relative
      div#removeOverlay
        display: none
      &:hover
        div#removeOverlay
          display: block
          cursor: no-drop
          position: absolute
          top: 0
          left: 0
          z-index: 10
          background-color: #f00
          opacity: .35
          height: 100%
          width: 100%
          border-radius: 5px

div#confirm
  padding: 15px
  text-align: center
  h3
    margin-bottom: 25px
  button.btn.btn-success
    margin-right: 25px

.tt-menu
  text-align: left
  background-color: backcolor
  width: 180px
  border-radius: 10px
  border: solid 1px darken(forecolor, 25%)
  font-size: smaller
.tt-hint
  color: darken(forecolor, 50%)
.tt-suggestion
  color: forecolor
  padding: 3px
  cursor: pointer
  p
    margin: 0
  &:first-child
    border-radius: 10px 10px 0 0
  &:last-child
    border-radius: 0 0 10px 10px
  &:only-child
    border-radius: 10px
.tt-cursor, .tt-suggestion:hover
  color: backcolor
  background-color: forecolor
